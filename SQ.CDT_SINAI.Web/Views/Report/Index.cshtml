@model SQ.CDT_SINAI.Shared.DTOs.ReportFilterDto
@using SQ.CDT_SINAI.Shared.Models

@{
    ViewData["Title"] = "Relatórios de Ocorrências";
}
<!-- Select2 CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-theme/0.1.0-beta.10/select2-bootstrap.min.css" />

<section class="content-header">
    <div class="container-fluid">
        <h1>Relatórios de Ocorrências</h1>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-filter mr-1"></i> Filtros do Relatório</h3>
            </div>
            <form asp-action="Display" method="post" target="_blank">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 form-group">
                            <label>Data Inicial</label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Data Final</label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Regional</label>
                            <input asp-for="Regional" class="form-control" placeholder="Ex: SP, RJ" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Marca</label>
                            <input asp-for="Brand" class="form-control" placeholder="Ex: Sinai" />
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-3 form-group">
                            <label>Unidade</label>
                            <input asp-for="Unit" class="form-control" placeholder="Nome da unidade" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Origem (Tipo)</label>
                            <select asp-for="Types" class="form-control select2" multiple="multiple" asp-items="Html.GetEnumSelectList<IncidentType>()" style="width: 100%;"></select>
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Gravidade</label>
                            <select asp-for="Severities" class="form-control select2" multiple="multiple" asp-items="Html.GetEnumSelectList<IncidentSeverity>()" style="width: 100%;"></select>
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Status</label>
                            <select asp-for="Statuses" class="form-control select2" multiple="multiple" asp-items="Html.GetEnumSelectList<IncidentStatus>()" style="width: 100%;"></select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>Categorias (Internas e Externas)</label>
                            <select asp-for="Categories" class="form-control select2" multiple="multiple" asp-items="Html.GetEnumSelectList<IncidentCategory>()" style="width: 100%;"></select>
                            <small class="text-muted">Selecione uma ou mais categorias para filtrar.</small>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button type="submit" class="btn btn-success"><i class="fas fa-chart-pie mr-1"></i> Gerar Relatório</button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <!-- Select2 JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.full.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                theme: "bootstrap",
                placeholder: "Selecione...",
                allowClear: true
            });
        });
    </script>
}