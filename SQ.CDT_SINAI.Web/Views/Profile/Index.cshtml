@model SQ.CDT_SINAI.Web.Models.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "Meu Perfil";
}

<section class="content-header">
    <div class="container-fluid">
        <h1>Meu Perfil</h1>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <!-- Card de Foto e Dados Básicos -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="@Url.Action("GetAvatar", "Profile")?v=@DateTime.Now.Ticks"
                                 alt="Foto de Perfil"
                                 style="width: 128px; height: 128px; object-fit: cover;">
                        </div>

                        <h3 class="profile-username text-center">@Model.Name</h3>
                        <p class="text-muted text-center">@Model.Role</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Email</b> <a class="float-right">@Model.Email</a>
                            </li>
                        </ul>

                        <form asp-action="UpdatePhoto" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="PhotoUpload" class="btn btn-default btn-block">
                                    <i class="fas fa-camera"></i> Alterar Foto
                                    <input asp-for="PhotoUpload" type="file" class="d-none" onchange="this.form.submit()">
                                </label>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#password" data-toggle="tab">Alterar Senha</a></li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="password">
                                <form asp-action="ChangePassword" method="post" class="form-horizontal">
                                    <input type="hidden" asp-for="Name" />
                                    <input type="hidden" asp-for="Email" />
                                    <input type="hidden" asp-for="Role" />

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Senha Atual</label>
                                        <div class="col-sm-9">
                                            <input asp-for="CurrentPassword" class="form-control" placeholder="Digite sua senha atual">
                                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Nova Senha</label>
                                        <div class="col-sm-9">
                                            <input asp-for="NewPassword" class="form-control" placeholder="Mínimo 6 caracteres">
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Confirmar</label>
                                        <div class="col-sm-9">
                                            <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Repita a nova senha">
                                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="offset-sm-3 col-sm-9">
                                            <button type="submit" class="btn btn-danger">Atualizar Senha</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}