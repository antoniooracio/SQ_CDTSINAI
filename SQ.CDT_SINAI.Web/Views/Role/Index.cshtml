@model SQ.CDT_SINAI.Shared.DTOs.PaginatedResult<SQ.CDT_SINAI.Shared.Models.Role>
@{ ViewData["Title"] = "Perfis de Acesso"; }

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Perfis de Acesso</h2>
        <a asp-action="Create" class="btn btn-primary">Novo Perfil</a>
    </div>

    <form asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Buscar..." value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-outline-secondary">Buscar</button>
        </div>
    </form>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Items.Any())
            {
                foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">Nenhum perfil encontrado.</td>
                </tr>
            }
        </tbody>
    </table>
</div>