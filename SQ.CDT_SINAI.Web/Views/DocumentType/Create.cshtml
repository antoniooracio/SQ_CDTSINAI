@model SQ.CDT_SINAI.Shared.Models.DocumentType

@{
    ViewData["Title"] = "Novo Tipo de Documento";
}

<div class="container mt-5">
    <h2>Novo Tipo de Documento</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label>Nome do Documento</label>
            <input asp-for="Name" class="form-control" placeholder="Ex: Alvará de Funcionamento" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Área Responsável</label>
            <input asp-for="ResponsibleArea" class="form-control" placeholder="Ex: Jurídico, Engenharia" />
        </div>
        <div class="form-check mt-3">
            <input asp-for="IsCompliance" class="form-check-input" />
            <label class="form-check-label" asp-for="IsCompliance">É Documento de Compliance?</label>
        </div>
        <button type="submit" class="btn btn-success mt-3">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}