@model SQ.CDT_SINAI.Shared.DTOs.PaginatedResult<SQ.CDT_SINAI.Shared.Models.DocumentRenewalLog>

@{
    ViewData["Title"] = "Histórico de Renovações Automáticas";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Histórico de Renovações Automáticas</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-check"></i> Sucesso!</h5>
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-ban"></i> Erro!</h5>
            @TempData["Error"]
        </div>
    }

    <form asp-action="Index" method="get" class="mb-3">
        <div class="row">
            <div class="col-md-3">
                <input type="date" name="startDate" class="form-control" value="@ViewData["StartDate"]" placeholder="Data Inicial" title="Data Inicial" />
            </div>
            <div class="col-md-3">
                <input type="date" name="endDate" class="form-control" value="@ViewData["EndDate"]" placeholder="Data Final" title="Data Final" />
            </div>
            <div class="col-md-4">
                <input type="text" name="search" class="form-control" value="@ViewData["CurrentSearch"]" placeholder="Buscar por Estabelecimento ou Documento..." />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-search"></i> Filtrar</button>
            </div>
        </div>
    </form>

    <div class="card">
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Data Renovação</th>
                        <th>Estabelecimento</th>
                        <th>Documento</th>
                        <th>Vencimento Anterior</th>
                        <th>Novo Vencimento</th>
                        <th>Detalhes</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.RenewalDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.EstablishmentDocument?.Establishment?.Name</td>
                                <td>@item.EstablishmentDocument?.DocumentType?.Name</td>
                                <td class="text-danger">@item.OldExpirationDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-success font-weight-bold">@item.NewExpirationDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.Details</td>
                                <td>
                                    <form asp-action="Revert" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Tem certeza que deseja reverter esta renovação? A data de vencimento voltará para @item.OldExpirationDate.ToString("dd/MM/yyyy").');">
                                        <button type="submit" class="btn btn-xs btn-danger" title="Reverter Renovação">
                                            <i class="fas fa-undo"></i> Reverter
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">Nenhum registro encontrado.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (Model != null && Model.TotalPages > 1)
        {
            <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-startDate="@ViewData["StartDate"]" asp-route-endDate="@ViewData["EndDate"]" asp-route-search="@ViewData["CurrentSearch"]">&laquo;</a>
                    </li>
                    <li class="page-item disabled"><span class="page-link">Página @Model.PageNumber de @Model.TotalPages</span></li>
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-startDate="@ViewData["StartDate"]" asp-route-endDate="@ViewData["EndDate"]" asp-route-search="@ViewData["CurrentSearch"]">&raquo;</a>
                    </li>
                </ul>
            </div>
        }
    </div>
</div>