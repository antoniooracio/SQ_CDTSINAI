@{
    ViewData["Title"] = "Acesso Negado";
    Layout = "_Layout"; // Usa o layout principal para manter o menu
}

<div class="content-wrapper" style="margin-left: 0;">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>403 Acesso Negado</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="error-page">
            <h2 class="headline text-danger">403</h2>
            <div class="error-content">
                <h3><i class="fas fa-exclamation-triangle text-danger"></i> Oops! Você não tem permissão.</h3>
                <p>
                    Você não possui as permissões necessárias para acessar este recurso.
                    Entre em contato com o administrador se acredita que isso é um erro.
                    <br>
                    <a asp-controller="Home" asp-action="Index">Voltar para o Dashboard</a>
                </p>
            </div>
        </div>
    </section>
</div>
