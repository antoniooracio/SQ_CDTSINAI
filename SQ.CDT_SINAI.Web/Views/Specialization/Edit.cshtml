@model SQ.CDT_SINAI.Shared.Models.Specialization

@{
    ViewData["Title"] = "Editar Especialização";
}

<div class="container mt-5">
    <h2>Editar Especialização</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        
        <div class="form-group">
            <label>Nome da Especialização</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-check mt-3">
            <input asp-for="Active" class="form-check-input" />
            <label class="form-check-label" asp-for="Active">Ativa</label>
        </div>

        <button type="submit" class="btn btn-success mt-3">Salvar</button>
        <a asp-controller="Specialization" asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
